<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expandable_default_section_icon"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="0"
            tools:src="@drawable/ic_section_expand" />

        <TextView
            android:id="@+id/expandable_default_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            tools:text="Lorem ipsum dolor sit" />

        <TextView
            android:id="@+id/expandable_default_section_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_weight="0"
            tools:text="123" />

    </LinearLayout>


</LinearLayout>